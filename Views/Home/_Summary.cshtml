@model Restaurant

<section>
    <h2>@Model.Name</h2>
    <div>
        Cuisine: @Model.Cuisine
    </div>
    <div>
        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        <a asp-page="/Restaurants/Edit" asp-route-id="@Model.Id">Edit</a>
        <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
</section>